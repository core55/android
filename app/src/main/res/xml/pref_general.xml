<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Languages"
        android:key="pref_general_lang_settings">

        <ListPreference
            android:defaultValue="-1"
            android:entries="@array/lang_from"
            android:entryValues="@array/lang_from"
            android:summary="%s"
            android:key="lang_from"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="I know..." />

        <ListPreference
            android:defaultValue="-1"
            android:entries="@array/lang_to"
            android:entryValues="@array/lang_to"
            android:summary="%s"
            android:key="lang_to"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="I want to learn..." />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Miscellaneous"
        android:key="pref_general_misc_settings">

        <SwitchPreference
            android:defaultValue="false"
            android:key="suggestions"
            android:summary="Enable phrase suggestions based on other user's usage."
            android:title="Suggestions" />
    </PreferenceCategory>
</PreferenceScreen>
