<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.core55.joinup.CreateActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapCreation"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.github.core55.joinup.CreateActivity" />

    <ImageButton
        android:id="@+id/createMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="9dp"
        android:background="#00000000"
        android:onClick="onClick"
        android:src="@drawable/create_map_button"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="490dp" />

    <ImageView
        android:id="@+id/circle_center"
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:src="@drawable/custom_circle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/shadow_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/shadow_circle3"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
